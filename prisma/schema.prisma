datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model News {
  id          Int      @id @default(autoincrement())
  title       String
  slug        String   @unique
  content     String
  image       String?
  category    String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  isPublished Boolean  @default(true)
}
